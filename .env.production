# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Security
SESSION_SECRET=your-secure-session-secret-here
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# TikTok Bot Configuration
TIKTOK_EMAIL=your-tiktok-email
TIKTOK_PASSWORD=your-tiktok-password
BOT_ACTION_DELAY=3000
BOT_MIN_FOLLOWERS=1000
BOT_MAX_FOLLOWERS=50000
BOT_INVITATION_LIMIT=20

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=logs/production.log

# Performance
COMPRESSION_LEVEL=6
STATIC_CACHE_MAX_AGE=86400

# Database
DATABASE_URL=your-database-url
DATABASE_SSL=true

# Monitoring
ENABLE_PERFORMANCE_METRICS=true
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# Browser Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage
PUPPETEER_VIEWPORT_WIDTH=1920
PUPPETEER_VIEWPORT_HEIGHT=1080

# Recovery
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
SESSION_TIMEOUT_MS=3600000  # 1 hour
